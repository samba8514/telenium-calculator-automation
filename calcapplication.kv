#:kivy 1.0

<CalcApplicationWidget>:
    orientation: 'vertical'
    spacing: 3
    padding: 8

    # Calculator display
    Label:
        id: display
        text: '0'
        font_size: 28
        size_hint: 1, 0.15
        halign: 'center'
        valign: 'middle'
        text_size: self.size
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        color: 1, 1, 1, 1

    # Button grid
    GridLayout:
        cols: 4
        spacing: 2
        size_hint: 1, 0.85

        # Row 1
        Button:
            text: 'C'
            font_size: 18
            on_press: root.on_button(self)
            background_color: 0.8, 0.3, 0.3, 1

        Button:
            text: 'CE'
            font_size: 18
            on_press: root.on_button(self)
            background_color: 0.8, 0.3, 0.3, 1

        Button:
            text: 'Back'
            font_size: 18
            on_press: root.on_button(self)
            background_color: 0.8, 0.3, 0.3, 1

        Button:
            text: 'Div'
            font_size: 18
            on_press: root.on_button(self)
            background_color: 0.3, 0.8, 0.3, 1

        # Row 2
        Button:
            text: '7'
            font_size: 18
            on_press: root.on_button(self)

        Button:
            text: '8'
            font_size: 18
            on_press: root.on_button(self)

        Button:
            text: '9'
            font_size: 18
            on_press: root.on_button(self)

        Button:
            text: 'Mul'
            font_size: 18
            on_press: root.on_button(self)
            background_color: 0.3, 0.8, 0.3, 1

        # Row 3
        Button:
            text: '4'
            font_size: 18
            on_press: root.on_button(self)

        Button:
            text: '5'
            font_size: 18
            on_press: root.on_button(self)

        Button:
            text: '6'
            font_size: 18
            on_press: root.on_button(self)

        Button:
            text: 'Sub'
            font_size: 18
            on_press: root.on_button(self)
            background_color: 0.3, 0.8, 0.3, 1

        # Row 4
        Button:
            text: '1'
            font_size: 18
            on_press: root.on_button(self)

        Button:
            text: '2'
            font_size: 18
            on_press: root.on_button(self)

        Button:
            text: '3'
            font_size: 18
            on_press: root.on_button(self)

        Button:
            text: 'Add'
            font_size: 18
            on_press: root.on_button(self)
            background_color: 0.3, 0.8, 0.3, 1

        # Row 5
        Button:
            text: '0'
            font_size: 18
            on_press: root.on_button(self)

        Button:
            text: 'Dot'
            font_size: 18
            on_press: root.on_button(self)

        Button:
            text: 'Eq'
            font_size: 18
            on_press: root.on_button(self)
            background_color: 0.3, 0.3, 0.8, 1

        # Empty space for 4x4 layout
        Widget:
